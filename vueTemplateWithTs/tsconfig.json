{
  "exclude": [
    "node_modules"
  ],
  "compilerOptions": {
    "baseUrl": "src",
    "jsx": "preserve",
    "jsxFactory": "h",
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "allowJs": true,
    "module": "esnext",
    "target": "es5",
    "moduleResolution": "node",
    "isolatedModules": true,
    "lib": [
      "dom",
      "es5",
      "es6",
      "es7",
      "es2015.promise"
    ],
    "paths": {
      "*": [
        "*",
        "assets/*"
      ]
    },
    "sourceMap": true,
    "pretty": true
  },
  "files": [
    "src/index.d.ts"
  ]
}